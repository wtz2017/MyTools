<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="3dp"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/top_indicator_layout"
        android:layout_width="@dimen/dp_270"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dp_7"
        android:layout_marginBottom="@dimen/dp_20"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <View
            android:id="@+id/v_top_indicator"
            android:layout_width="@dimen/dp_30"
            android:layout_height="@dimen/dp_2"
            android:background="#0000ff" />
    </LinearLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/vp_imgs"
        android:layout_width="@dimen/dp_320"
        android:layout_height="@dimen/dp_188"
        android:flipInterval="30"
        android:nextFocusUp="@id/vp_imgs"
        android:nextFocusDown="@id/vp_imgs" />

    <LinearLayout
        android:id="@+id/img_index_layout"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_13"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dp_7"
        android:gravity="center"
        android:orientation="horizontal" />

</LinearLayout>
